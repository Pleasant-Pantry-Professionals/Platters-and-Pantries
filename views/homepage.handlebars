              {{/each}}
          </div>

        <h2 class="white-text std-padding-left ">Top Chicken Recipes</h2>

        <div class="card-container flex-container  col s12 flow-text">
          {{#each recipes}}
            <div>{{recipe.label }}</div>
          {{/each}}
        </div>
        <div class="col l3 s12 flow-text ">
        
            <ul class="collection with-header list">
              <h2>Grocery List</h2>
              
