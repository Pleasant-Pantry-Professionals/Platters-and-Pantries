          <div>
            <form autocomplete="off" >
              <div class="input-field searchbar">
                <input id="searchdish" class="autocomplete validate" required="" aria-required="true" type="text" placeholder="Search">
                <a id="search-dish"class="waves-effect waves-light btn white-text">Search</a>
