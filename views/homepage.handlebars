<div class="chef-image">
  <header>
    <nav class="transparent">
      <div class="nav-wrapper">
        <img href="#" class="brand-logo logo" src="./links/Platters and Pantries.png">
        <a href="#" data-target="mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        <ul class="right hide-on-med-and-down">
          <li class="waves-effect waves-light"><a href="/login">Login</a></li>
          <li class="waves-effect waves-light"><a href="/">Home</a></li>
          <li class="waves-effect waves-light"><a href="/recipes">Recipes</a></li>
          <li class="waves-effect waves-light"><a href="/about">About</a>
          </li>
        </ul>
      </div>
    </nav>

    <ul class="sidenav black white-text" id="mobile">
      <li><a class="white-text" href="/login">Login</a></li>
      <li><a class="white-text" href="/">Home</a></li>
      <li><a class="white-text" href="/recipes">Recipes</a></li>
      <li><a class="white-text" href="/about">About</a></li>
    </ul>

  </header>
  <main>
    <div class="row">
      <div class="col l9 s12">

        <h1 class="white-text">WHAT'S ON <br>THE MENU TODAY?</h1>
        <br>

        <div>
          <form autocomplete="off">
            <div class="input-field searchbar">
              <input id="searchdish" required="" aria-required="true" type="text"
                placeholder="Search">
              <a id="search-dish" class="waves-effect waves-light btn white-text">Search</a>
              <span class="helper-text" data-error="Enter a Dish" data-success=""></span>
              </input>
            </div>
            <div>
              <a id="Burgers" class="waves-effect waves-light btn oneSearch">BURGERS</a>
              <a id="Salad" class="waves-effect waves-light btn oneSearch">SALAD</a>
              <a id="Pizza" class="waves-effect waves-light btn  oneSearch">PIZZA</a>
              <a id="Sushi" class="waves-effect waves-light btn oneSearch">SUSHI</a>
              <a id="Vegan" class="waves-effect waves-light btn oneSearch">VEGAN</a>
            </div>
          </form>
        </div>


        <h2 class="white-text std-padding-left ">Top {{dish}} Recipes</h2>

        <div class="card-container flex-container  col s12 flow-text">
          {{#each recipes as |recipesCard|}}
          {{> recipesCard}}
          {{/each}}
        </div>


        <div class="col l3 s12 flow-text ">

          <ul class="collection with-header list">
            <h2>Grocery List</h2>

            <li class="collection-header">
              <h6 class="align">Add to <br> Pantry</h6>
            </li>
            {{#each shoppingList as |grocerylist|}}
            {{> grocerylist}}
            {{/each}}
          </ul>
          <div>
            <a class="waves-effect waves-light btn center-100pc">VIEW MY PANTRY</a>
          </div>
        </div>
      </div>
  </main>