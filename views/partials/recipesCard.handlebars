<div class="card">
  <div class="card-image waves-effect waves-block waves-light">
    <img class="activator" src={{recipe.image}} />
  </div>
  <div class="card-content">
    <span class="card-title activator grey-text text-darken-4">{{recipe.label}}<i
        class="material-icons right">more_vert</i></span>
    <a id="{{_links.self.href}}" class="waves-effect waves-light btn white-text ingredient_btn">Ingredients</a>
    {{!-- clicking needs to send recipes._links to /dish
    ?{{recipe._links.self.href}} --}}
  </div>
</div>